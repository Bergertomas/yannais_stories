#:kivy 2.0.0
#:import theme theme

<FixedWidthView@BoxLayout>:
    orientation: 'vertical'
    padding: dp(20)
    spacing: dp(10)
    size_hint: (1, 1)
    canvas.before:
        Color:
            rgba: theme.BACKGROUND_COLOR
        Rectangle:
            pos: self.pos
            size: self.size

# Global styles
<Label>:
    color: theme.TEXT_COLOR
    font_size: theme.FONT_SIZE_REGULAR
    text_size: self.width, None
    halign: 'center'
    shorten: True

<Button>:
    font_size: theme.FONT_SIZE_REGULAR
    size_hint_y: None
    height: theme.BUTTON_HEIGHT_REGULAR
    background_normal: ''
    background_color: theme.PRIMARY_COLOR
    color: theme.TEXT_COLOR

<TextInput>:
    font_size: theme.FONT_SIZE_REGULAR
    multiline: False
    padding: [10, 10, 10, 10]
    background_color: theme.SURFACE_COLOR
    foreground_color: theme.TEXT_COLOR
    cursor_color: theme.TEXT_COLOR

<Slider>:
    cursor_size: dp(20), dp(20)
    cursor_disabled_size: dp(20), dp(20)

<ScrollView>:
    bar_width: dp(10)
    bar_color: theme.PRIMARY_COLOR
    bar_inactive_color: theme.PRIMARY_COLOR[0], theme.PRIMARY_COLOR[1], theme.PRIMARY_COLOR[2], 0.5
    effect_cls: "ScrollEffect"
    scroll_type: ['bars']

<ScreenManager>:
    canvas.before:
        Color:
            rgba: theme.BACKGROUND_COLOR
        Rectangle:
            pos: self.pos
            size: self.size
